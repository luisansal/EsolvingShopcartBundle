{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            {{
                error.messagePluralization is null
                    ? error.messageTemplate|trans(error.messageParameters, 'validators')
                    : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
            }}
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block form_row %}
    <div class="form_row">
        <div class="form_label"> {{ form_label(form) }} </div>
        <div class="form_widget"> {{ form_widget(form) }} </div>
        <div class="form_errors"> {{ form_errors(form) }} </div>
    </div>
{% endblock form_row %}

{% use 'form_div_layout.html.twig' with form_label as base_form_label %}
{% block form_label %}
    {{ block('base_form_label') }}
    {% if required %}
        <span class="required" title="{% trans from 'EsolvingShopcartBundle' %} this_field_is_required {% endtrans %}"> *</span>
    {% endif %}
{% endblock form_label %}
